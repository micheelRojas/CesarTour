<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   android:orientation="vertical"
    android:scrollbars="vertical"
    android:layout_gravity="center"
    android:layout_height="350dp"
    android:layout_width="350dp"
    android:background="@drawable/bg_color"
    tools:context=".Presentacion.Detalles">


                        <ImageView

                            android:id="@+id/imageView_foto"
                            android:layout_marginTop="5dp"
                            android:padding="2dp"
                            android:layout_marginLeft="80dp"
                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            />

                        <TextView
                            android:id="@+id/textView_Category2"
                            android:fontFamily="@font/delimax"
                            android:gravity="center"
                            android:text="@string/category"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="100dp"/>

                        <TextView
                            android:id="@+id/textView_Name"
                            android:padding="5dp"
                            android:gravity="center"
                            android:text="@string/name"
                            android:layout_marginLeft="100dp"
                            android:fontFamily="@font/delimax"
                            app:layout_constraintTop_toBottomOf="@+id/textView_Category2"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/textView_Description"

                            android:gravity="center"
                            android:text="@string/description"
                            android:padding="8dp"
                            android:layout_height="100dp"
                            android:textColor="@color/black"
                            android:fontFamily="serif"
                            android:layout_width="wrap_content"
                            android:scrollbars="vertical"
                            />

                        <Button
                            android:padding="2dp"
                            android:id="@+id/registrarMis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="140dp"
                            android:text="Registrar Mis"
                            android:textColor="@color/black"
                            android:fontFamily="@font/days_later"

                            />



        </LinearLayout>




