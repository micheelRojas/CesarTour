<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CulturaFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="Municipio"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/mapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40sp"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="40sp"
            android:layout_marginEnd="40sp"
            android:layout_marginRight="40sp"
            android:layout_marginBottom="40sp"
            android:adjustViewBounds="false"
            android:color="@color/boton"
            android:src="@drawable/mapa1" />

        <ImageButton
            android:id="@+id/button_valledupar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/mapa"
            android:layout_alignEnd="@+id/mapa"
            android:layout_alignRight="@+id/mapa"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="103dp"
            android:layout_marginRight="103dp"
            android:background="@drawable/buttonstyle"

            android:gravity="end"
            android:src="@drawable/pin"
            android:text="Valledupar"
            android:textAlignment="viewEnd"

            />

        <ImageButton
            android:id="@+id/button_manaure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/mapa"
            android:layout_alignEnd="@+id/mapa"
            android:layout_alignRight="@+id/mapa"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:background="@drawable/buttonstyle"
            android:src="@drawable/pin"
            android:text="Button" />

        <ImageButton
            android:id="@+id/button_pueblo_bello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/mapa"
            android:layout_alignEnd="@+id/mapa"
            android:layout_alignRight="@+id/mapa"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="133dp"
            android:layout_marginRight="133dp"
            android:background="@drawable/buttonstyle"
            android:src="@drawable/pin"
            android:text="Button" />


    </RelativeLayout>





</FrameLayout>